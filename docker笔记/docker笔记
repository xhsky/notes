              -l list                     # 为容器设置元数据
              --label-file list           # 
              --link list                 #
              --link-local-ip
              --log-driver str
              --log-opt list
              --mac-address string        # 容器内存地址
              -m bytes                    # 内存限制
              --memory-reservation bytes  # 
              --memory-swap bytes
              --memroy-swappiness int
              --mount mount
              --name str                  # 容器名称
              --network str     
              --network-alias list
              --no-healthcheck
